{
  "compilerOptions": {
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "js",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["js/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
