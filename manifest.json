{
  "name": "Brancho",
  "description": "makes a branch name out of a jira card and copy it to the clipboard",
  "version": "3.2",
  "manifest_version": 2,
  "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "declarativeContent",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "commands": {
    "copy-branch-name": {
      "description": "Copy branch",
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      }
    }
  }
}
