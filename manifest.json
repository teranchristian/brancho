{
  "name": "Brancho",
  "description": "makes a branch name out of a jira card and copy it to the clipboard",
  "version": "6.0",
  "manifest_version": 3,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "clipboardWrite",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_page": "option/index.html",
  "action": {
    "default_popup": "popup/index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    },
    "copy-branch-name": {
      "description": "Copy branch",
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      }
    }
  }
}