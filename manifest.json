{
  "name": "Brancho",
  "description": "makes a branch name out of a jira card and copy it to the clipboard",
  "version": "4.0",
  "manifest_version": 3,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "clipboardWrite",
    "declarativeContent"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {},
  "commands": {
    "copy-branch-name": {
      "description": "Copy branch",
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      }
    }
  }
}